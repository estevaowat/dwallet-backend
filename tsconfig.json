{
   "compilerOptions": {
      "lib": [
         "esnext"
      ],
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": ".",
      "baseUrl": "./src",
      "removeComments": true,
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
         "@services/*": [
            "services/*"
         ],
         "@repositories/*": [
            "repositories/*"
         ],
         "@controllers/*": [
            "controllers/*"
         ],
         "@utils/*": [
            "utils/*"
         ],
         "@database/*": [
            "database/*"
         ],
         "@dtos/*": [
            "dtos/*"
         ],
         "@setup/*": [
            "setup/*"
         ]

      }
   }
}